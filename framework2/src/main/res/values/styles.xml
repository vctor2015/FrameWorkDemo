<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MSV_EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="MSV_ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <declare-styleable name="StateLayout">
        <attr name="loadingLayout" format="reference" />
        <attr name="errorLayout" format="reference" />
    </declare-styleable>

    <style name="DefaultProgressDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="progressDrawable">
        <item name="android:indeterminateDrawable">@drawable/custom_progress</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">2000</item>
    </style>
</resources>
